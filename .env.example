# =============================================================================
# DEV AGENTS CONFIGURATION
# =============================================================================
# Complete environment configuration for the DevAgents project
# Copy this file to .env and configure the appropriate values

# -----------------------------------------------------------------------------
# AVATAR & BRANDING
# -----------------------------------------------------------------------------
AVATAR_FULL_NAME=DevAgents
AVATAR_SHORT_NAME=DevAgents

# -----------------------------------------------------------------------------
# DEBUGGING & LOGGING
# -----------------------------------------------------------------------------
# Enable console logging for debugging (set to 1 to enable)
DEV_AGENTS_CONSOLE_LOGGING=

# Dynaconf environment mode (development, testing, production)
DYNACONF_ENV=development

# -----------------------------------------------------------------------------
# CORE SYSTEM SETTINGS
# -----------------------------------------------------------------------------
# Core application settings
CORE_LOG_DIR=./data/logs
CORE_STORAGE_FILE_DIR=./data/storage

# -----------------------------------------------------------------------------
# GIT REPOSITORY SETTINGS
# -----------------------------------------------------------------------------
# Full path to your git cloned repository
GIT_REPO_PATH=

# Automatic git pull settings
GIT_AUTOPULL=false
GIT_PULL_INTERVAL_SECONDS=120

# -----------------------------------------------------------------------------
# LLM PROVIDER CONFIGURATION - CONFIGURE AT LEAST ONE
# -----------------------------------------------------------------------------

# AWS Bedrock
AWS_DEFAULT_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# OpenAI
OPENAI_API_KEY=

# Anthropic
ANTHROPIC_API_KEY=

# Pydantic AI Model Configuration
# See https://ai.pydantic.dev/models/ for available models
LLM_MODEL_SMALL=anthropic:claude-3-5-haiku-latest
LLM_MODEL_LARGE=anthropic:claude-sonnet-4-20250514

# -----------------------------------------------------------------------------
# DEVOPS INTEGRATIONS - CONFIGURE ONE OR MORE
# -----------------------------------------------------------------------------

# Azure DevOps
AZURE_URL=https://dev.azure.com
AZURE_DEVOPS_ORGANIZATION=
AZURE_DEVOPS_PROJECT=
AZURE_DEVOPS_PAT=
AZURE_DEVOPS_REPOID=
AZURE_DEVOPS_MOCK=false

# GitLab Integration
GITLAB_API_URL=https://gitlab.com/api/v4
GITLAB_PROJECT_ID=
GITLAB_TOKEN=
GITLAB_MOCK=false

# GitHub Integration
GITHUB_API_URL=https://api.github.com
GITHUB_OWNER=
GITHUB_REPO=
GITHUB_TOKEN=
GITHUB_MOCK=false

# Jira Integration
JIRA_DOMAIN=
JIRA_EMAIL=
JIRA_TOKEN=
JIRA_MOCK=false

# -----------------------------------------------------------------------------
# INTERFACE INTEGRATIONS
# -----------------------------------------------------------------------------

# Slack Bot Configuration
# See https://api.slack.com/apps/ and manifest.json for setup instructions
SLACK_APP_TOKEN=
SLACK_BOT_TOKEN=
SLACK_CHANNEL_ID=
SLACK_PROCESSING_TIMEOUT=6000

# AGUI Web Interface Configuration
#AGUI_HOST=0.0.0.0
#AGUI_PORT=8000
#AGUI_RELOAD=false
#AGUI_DEFAULT_TIMEOUT=300
#AGUI_DEFAULT_AGENT_TYPE=chatbot
#AGUI_MAX_MESSAGE_LENGTH=10000

# CLI Configuration
CLI_DEFAULT_AGENT_TYPE=gitchatbot

# -----------------------------------------------------------------------------
# AGENT & SUBAGENT CONFIGURATIONS
# -----------------------------------------------------------------------------

# Impact Analysis Agent
IMPACT_ANALYSIS_MAX_FILES=200

# Changelog Agent
CHANGELOG_MAX_FILES=200

